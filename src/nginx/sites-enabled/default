server {
  listen 8080;
  server_name wiznwit.com;
  lua_code_cache on;

  location /favicon.ico {
    alias assets/favicon.ico;
  }

  location ~^/(img|css|js)/ {
    root assets/;
  }

  location ^/user {
    default_type text/html;

    content_by_lua '
      require("lapis").serve("services/user")
    ';
  }

  location / {
    default_type text/html;

    content_by_lua '
      require("lapis").serve("hosts/wiznwitcom/app")
    ';
  }
}
